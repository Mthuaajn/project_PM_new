<html lang='en'>

<head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Lập báo cáo tồn</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous' />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/baocao/ton.css' />
</head>

<body>
    <h1 id='title'>Báo cáo tồn</h1>
    <section id='book-management'>
        <div id='book-form'>
            <div id='main-form'>

                <div class='mb-3 form-item'>

                    <select class='form-select' id='customerId' placeholder="Chọn tháng">
                        <option value='1'>1/2023</option>
                        <option value='2'>2/2023</option>
                        <option value='2'>3/2023</option>
                        <option value='2'>4/2023</option>
                        <option value='2'>5/2023</option>
                        <option value='2'>6/2023</option>
                        <!-- Thêm các tùy chọn khác nếu cần -->
                    </select>
                </div>

            </div>
            <div id='btn-list'>
                <button type='button' class='btn btn'>Lập báo cáo</button>
            </div>
        </div>
        <div id='book-list'>
            <table class='table table-bordered'>
                <thead>
                    <tr>
                        <th scope="col" colspan="5" class="table-heading"><b>Báo cáo tồn</b></th>
                    </tr>
                    <tr>
                        <th scope="col" colspan="5" id="selectedMonth">
                            Tháng:
                        </th>
                    </tr>
                    <tr>
                        <th scope='col'>STT</th>
                        <th scope="col">Sách</th>
                        <th scope='col'>Tồn đầu</th>
                        <th scope='col'>Phát sinh</th>
                        <th scope='col'>Tồn cuối</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope='row'>1</th>
                        <td>Nhập môn lập trình</td>
                        <td>12</td>
                        <td>0</td>
                        <td>12</td>
                    </tr>
                    <tr>
                        <th scope='row'>2</th>
                        <td>Kỹ thuật lập trình</td>
                        <td>30</td>
                        <td>10</td>
                        <td>40</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
        integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
        crossorigin='anonymous'></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get the necessary elements
            var selectElement = document.getElementById('customerId');
            var monthTextElement = document.getElementById('selectedMonth');

            // Add an event listener to the select element
            selectElement.addEventListener('change', function () {
                // Update the "Tháng: " text based on the selected value
                monthTextElement.textContent = 'Tháng: ' + selectElement.options[selectElement.selectedIndex].text;
            });
        });
    </script>
</body>

</html>