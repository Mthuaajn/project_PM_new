<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>QL NHÀ Khách Hàng</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/sach/qlsach.css' />
  </head>
  <body>
    <h1 id='title'>Quản lý khách hàng</h1>
    <section id='book-management'>
      <div id='book-form'>
        <div id='main-form'>
          <div id='left'>
            <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Mã Khách Hàng</label>
              <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã Khách Hàng' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Địa chỉ</label>
              <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã Khách Hàng' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Email</label>
              <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã Khách Hàng' />
            </div>
        </div>
          <div id='right'>
                <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Số điện thoại</label>
              <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã Khách Hàng' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookName' class='form-label'>Tên Khách Hàng</label>
              <input type='text' class='form-control' id='bookName' placeholder='Nhập tên Khách Hàng' />
            </div>
        
        </div>
        <div id='btn-list'>
          <button type='button' class='btn btn-primary'>Thêm Khách Hàng</button>
          <button type='button' class='btn btn-secondary'>Lưu Khách Hàng</button>
          <button type='button' class='btn btn-success'>Cập nhật Khách Hàng</button>
        </div>
      </div>
      <div id='book-list'>
        {{#if khachHangs}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
  <tr>
    <th>STT</th>
    <th>Mã khách hàng</th>
    <th>Họ tên</th>
    <th>Địa chỉ</th>
    <th>Email</th>
    <th>Số điện thoại</th>
    <th>Tiền nợ</th>
    <th>Thực hiện</th>
  </tr>
</thead>
<tbody>
  {{#each khachHangs}}
    <tr>
      <td>{{@index}}</td>
      <td>{{maKhachHang}}</td>
      <td><strong>{{hoTen}}</strong></td>
      <td>{{diaChi}}</td>
      <td>{{email}}</td>
      <td>{{dienThoai}}</td>
      <td>{{tienNo}}</td>
      <td>
        <a href="/khachhangs/{{_id}}/delete" class="btn btn-danger">
          Delete
        </a>
        <a href="/khachhangs/{{_id}}/edit" class="btn btn-info">
          Edit
        </a>
      </td>
    </tr>
  {{/each}}
</tbody>

    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No khachhangs</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}
      </div>
    </section>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>