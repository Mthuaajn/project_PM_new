<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>QL Nhà sách</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="/css/sach/qlsach.css" />
    </head>

    <body>
        <h1 id="title">Phiếu thu tiền</h1>
        <section id="book-management">
            <div id="book-form">
                <div id="main-form">
                    <div id="left">
                        <div class="mb-3 form-item">
                            <label for="bookId" class="form-label">Khách hàng</label>
                            <select id="khachHangSelect" name="maKhachHang" class="form-select" aria-label="Chọn thể loại">
                                {{#each khachHangs}}
                                    <option value="{{_id}}">{{hoTen}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3 form-item">
                            <label for="bookName" class="form-label">Nhập số tiền thu</label>
                            <input type="number" min="0" oninput="this.value = Math.abs(this.value)" class="form-control" id="soTienThu" placeholder="Số tiền" />
                        </div>
                    </div>
                    <div id="right">
                        <div class="mb-3 form-item">
                            <label for="bookId" class="form-label">Tiền nợ</label>
                            <input type="text" class="form-control" id="customerLoan" placeholder="Số tiền" disabled />
                        </div>
                        <div class="mb-3 form-item">
                            <label for="bookName" class="form-label">Mã phiếu thu</label>
                            <input type="text" class="form-control" id="maPhieuThu" placeholder="Nhập mã phiếu thu" />
                        </div>
                    </div>
                </div>
                <div id="btn-list">
                    <button type="button" class="btn btn" id="themPhieuThuBtn">Thêm phiếu thu</button>
                </div>
                <div id="error-container"></div>

            </div>

            <div id="book-list">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Mã phiếu thu</th>
                            <th scope="col">Tên Khách hàng</th>
                            <th scope="col">Ngày lập</th>
                            <th scope="col">Số tiền thu</th>
                            <th scope="col">Thực hiện</th>
                        </tr>
                    </thead>
                    <tbody id="phieu-thu-list">
                        {{#each phieuThus}}
                            <tr>
                                <th scope="row">{{maPhieuThu}}</th>
                                <td>{{tenKhachHang}}</td>
                                <td>{{ngaynhap}}</td>
                                <td>{{soTienThu}}</td>
                                <td id="delete">
                                    <button id="delete" class="delete-button" data-phieu-thu-id="{{_id}}">
                                        <img id="delete" src="/img/icon-bin.svg" alt="" />
                                    </button>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="./js/thutien.js"></script>

    </body>

</html>