<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>QL Nhà sách</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/sach/qlsach.css' />
  </head>
  <body>
    <h1 id='title'>Phiếu thu tiền</h1>
    <section id='book-management'>
      <div id='book-form'>
        <div id='main-form'>
          <div id='left'>
            <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Khách hàng</label>
                <select class='form-select' id='customerId'>
                <option value='1'>Nguyễn Minh Thuận</option>
                <option value='2'>Nguyễn Hữu Thương</option>
                <!-- Thêm các tùy chọn khác nếu cần -->
              </select>
            </div>
            <div class='mb-3 form-item'>
              <label for='bookName' class='form-label'>Nhập số tiền thu</label>
              <input type='text' class='form-control' id='customerName' placeholder='Số tiền' />
            </div>
          </div>
          <div id='right'>
             <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Tiền nợ</label>
              <input type='text' class='form-control' id='customerPhone' placeholder='Số tiền' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookName' class='form-label'>Mã phiếu thu</label>
              <input type='text' class='form-control' id='customerEmail' placeholder='Nhập mã phiếu thu' />
            </div>
          </div>
        </div>
        <div id='btn-list'>
          <button type='button' class='btn btn'>Thêm phiếu thu</button>
        </div>
      </div>
       <div id='book-list'>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th scope='col'>Mã phiếu thu</th>
              <th scope='col'>Tên Khách hàng</th>
              <th scope='col'>Ngày lập</th>
              <th scope='col'>Số tiền thu</th>
              <th scope='col'>Thực hiện</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope='row'>1</th>
              <td>Nguyễn Minh Thuận</td>
              <td>7/12/2023 12:00:00 AM</td>
              <td>0</td>
              <td>
                <button>
                  <img src='/img/icon-bin.svg' alt='' />
                </button>
              </td>
            </tr>
            <tr>
               <th scope='row'>2</th>
              <td>Nguyễn Hữu Thương</td>
              <td>9/12/2023 12:00:00 AM</td>
              <td>10000</td>
              <td>
                <button>
                  <img src='/img/icon-bin.svg' alt='' />
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>