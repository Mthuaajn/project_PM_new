<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>QL NHÀ SÁCH</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous' />
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
  <link rel='stylesheet' href='/css/khach_hang/timkiemkhachhang.css' />
</head>

<body>
  <h1 id='title'>Tìm khách hàng</h1>
  <section id='book-management'>
    <div id='book-form'>
      <div class='search-bar'>
        <img src='http://localhost:3000/img/icon-search.svg' alt='Search' />
        <input type='text' class='form-control' id='searchId' placeholder='Tìm kiếm khách hàng' />
        <button>
          <img src='http://localhost:3000/img/icon-arrow.svg' alt='Search' />
        </button>
      </div>
    </div>
    <div id='book-list'>
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th scope='col'>Mã khách hàng</th>
            <th scope='col'>Tên khách hàng</th>
            <th scope='col'>Email</th>
            <th scope='col'>Số điện thoại</th>
            <th scope='col'>Địa chỉ</th>
            <th scope='col'>Tiền nợ</th>
          </tr>
        </thead>
        <tbody id="customer-list">
          {{#each khachHangs}}
          <tr>
            <th scope="row">{{maKhachHang}}</th>
            <td>{{hoTen}}</td>
            <td>{{diaChi}}</td>
            <td>{{email}}</td>
            <td>{{dienThoai}}</td>
            <td>{{tienNo}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
    crossorigin='anonymous'></script>
  <script src="./js/timkiemkhachhang.js"></script>

</body>

</html>