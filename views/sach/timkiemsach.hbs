<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QL NHÀ SÁCH</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/sach/timkiemsach.css" />
  </head>
  <body>
    <h1 id="title">Tìm kiếm sách</h1>
    <section id="book-management">
      <form action="/sach/timkiemsach" id="book-form" method="GET">
        <div class="book-name">
          <select id="bookCate" name="field" class="form-select" aria-label="Tên sách">
            <option value="tensach">Tên sách</option>
            <option value="theloai">Thể loại</option>
            <option value="tacgia">Tác giả</option>
            <option value="nhaxuatban">Nhà xuất bản</option>
            <option value="dongia">Giá</option>
          </select>
        </div>
        <div class="search-bar">
          <img src="/img/icon-search.svg" alt="Search" />
          <input
            type="text"
            class="form-control"
            id="value"
            name="value"
            placeholder="nhập giá trị"
          />
          <button type="submit">
            <img src="/img/icon-arrow.svg" alt="Search" />
          </button>
        </div>
      </form>
      <div id="book-list">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Mã Sách</th>
              <th scope="col">Tên Sách</th>
              <th scope="col">Tác giả</th>
              <th scope="col">Nhà xuất bản</th>
              <th scope="col">Thể loại</th>
              <th scope="col">Giá</th>
            </tr>
          </thead>
          <tbody>
            {{#if isFind}}
              {{#each books}}
                <tr>
                  <th scope="row">{{masach}}</th>
                  <td>{{tensach}}</td>
                  <td>{{tacgia}}</td>
                  <td>{{nhaxuatban}}</td>
                  <td>{{theloai}}</td>
                  <td>{{dongia}}</td>
                </tr>
              {{/each}}
            {{else}}
              <tr>
                <td colspan="6">No books found</td>
              </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>